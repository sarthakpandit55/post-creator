<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
            <a class="bg-red-500 text-sm rounded-md px-3 py-2 mb-5 inline-block" href="/logout">Logout</a>
        </div>
        <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-md overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
            <h3 class="text-3xl mb-10">Hello, <%= user.name %></h3>
        </div>
        <h5 class="mb-5 mt-3">you can create a new post</h5>
        <form method="post" action="/post">
            <textarea placeholder="What's on your mind ?" class="block p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-700 rounded-md" name="content"></textarea>
            <input class="px-3 w-40 py-2 bg-blue-600 block rounded-md mt-3 text-sm" type="submit" name="" id="" value="Create New Post">
        </form>
        <!-- posts -->

        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts.</h3>
            <div class="postcontainer mt-5 flex flex-wrap gap-5">
                <!-- post 1 -->
                <% user.posts.forEach(function(post){ %>
                    <div class="post w-1/3 p-4 rounded-md border-2 bg-zinc-800 border-zinc-700">
                    <h4 class="text-blue-500 mb-2"><%= user.username%></h4>
                        <p class="text-zinc-400 text-sm tracking-tight"><%= post.content%></p>
                        <small class="mt-4 inline-block"><%= post.likes.length %></small>
                        <div class="btns mt-1 flex gap-5">
                            <a class="text-blue-500" href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"%>
                            </a>
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                        </div>
                    
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>